<div class="input-group col-md-6">
  <%= form_tag(:login_form) do %>
      <div class="form-group">
        <%= label_tag :email, t('E-mail') %><br>
        <%= email_field :user, :email, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag :password, t('Password') %><br>
        <%= password_field :user, :password, {class: 'form-control'} %>
      </div>
      <div class="actions">
        <%= submit_tag(t('Login'), {class: 'btn btn-default'}) %>
      </div>
  <% end %>
</div>