<form class="form-inline" id="filters">
  <div class="form-group">
    <label class="sr-only" for="date_from"><%= t('from') %></label>
    <input type="date" name="date_from" class="form-control" id="date_from" placeholder="<%= t('from') %>">
  </div>
  <div class="form-group">
    <label class="sr-only" for="date_to"><%= t('to') %></label>
    <input type="date" name="date_to" class="form-control" id="date_to" placeholder="<%= t('to') %>">
  </div>
  <div class="checkbox">
    <% for cat in @filters do %>
        <label>
          <input type="checkbox" value="<%= cat.id -%>" name="categorie[]"> <%= cat.name -%>
        </label>
    <% end %>
  </div>
  <button type="submit" class="btn btn-default"><%= t('filter_it') %></button>
</form>